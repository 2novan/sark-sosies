<div class="container-show p-4">
  <div class="Listing">
    <div class="show-photo flex">
      <% if @sosie.photo.attached? %>
        <%= cl_image_tag @sosie.photo.key, alt: "placeholder" %>
      <% else %>
        <%= image_tag "placeholder.jpg", alt: "placeholder" %>
      <% end %>
    </div>
    <div class="sosie-info">
      <h2>
        <%= @sosie.name %>
      </h2>
      <h2 class="sosie-info-price">â‚¬<%= @sosie.price_per_day %> daily</h2>
    </div>
    <p>
      <%= @sosie.description %>
    </p>
  </div>
  <div class="Form">
    <p>
      <%= @sosie.address %>
    </p>
    <%= render partial: "bookings/booking_form", locals: {user: @user, sosie: @sosie, booking: @booking}  %>
  </div>
  <div class="Right"></div>
</div>
