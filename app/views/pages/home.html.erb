<div class="home">
  <h1 class="welcome">Welcome to Sark-Sosies</h1>
  <div class="snapshot">
    <div class="home-cards">
      <div class="row">
        <% @sosies.first(3).each do |sosie| %>
          <div class="col-md-4">
            <%= render partial: "sosies/card", locals: {sosie: sosie} %>
          </div>
        <% end %>
      </div>
    </div>
    <%= link_to "Show me more!", "/sosies", class: "button1" %>
  </div>
</div>
